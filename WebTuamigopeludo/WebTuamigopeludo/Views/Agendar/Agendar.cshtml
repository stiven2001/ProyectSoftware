@model WebTuamigopeludo.Models.Citas;
<div class="row">

    <div class="col-sm-8 offset-sm-2">
        <h2> Agendar Cita</h2>
        <form asp-controller="Agendar" asp-action="Agendar" method="post">
            <div class="mb3">
                <label> Tipo de Documento</label>
                <input class="form-control" asp-for="TipoDocumento" type="text" />

            </div>
            <div class="mb3">
                <label> Documento</label>
                <input class="form-control" asp-for="Documento" type="text" />

            </div>

            <div class="mb3">
                <label> Nombre</label>
                <input class="form-control" asp-for="Nombre" type="text" />

            </div>
             <div class="mb3">
                <label> Apellidos</label>
                <input class="form-control" asp-for="Apellidos" type="text" />

            </div>

            <div class="mb3">
                <label> Telefono</label>
                <input class="form-control" asp-for="Telefono" type="text" />

            </div>
             <div class="mb3">
                <label> Correo</label>
                <input class="form-control" asp-for="Correo" type="text" />

            </div>
            <div class="mb3">
                <label> Nombre de la mascota</label>
                <input class="form-control" asp-for="NombreMascota" type="text" />

            </div>
            <div class="mb3">
                <label> Edad</label>
                <input class="form-control" asp-for="Edad" type="text" />

            </div>
            <div class="mb3">
                <label> Especie</label>
                <input class="form-control" asp-for="Especie" type="text" />

            </div>
            <div class="mb3">
                <label> Raza</label>
                <input class="form-control" asp-for="Raza" type="text" />

            </div>
            <div class="mb3">
                <label> Servicio</label>
                <input class="form-control" asp-for="Servicio" type="text" />

            </div>
           

            <div class="mb3">
                <label> Fecha de Cita</label>
                <input class="form-control" asp-for="Fecha" type="date" />

            </div>
            

            <div class="mb3">
                <button class="btn btn-primary" type="submit">Guardar </button>
                <a asp-controller="Agendar" asp-action="Lista" class="btn btn-warning">Volver</a>


            </div>



        </form>






    </div>
</div>
